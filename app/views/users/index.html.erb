<% if @book.errors.any? %>
	<div id="error_explanation">
		<h2><%= @book.errors.count %>errors occured</h2>
		<ul>
			<% @book.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>
<%= render 'users/ulist', { book: @book, user: @user } %>
<div class="col-xs-9">
	<h2>Users</h2>
		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">image</th>
					<th scope="col">name</th>
					<th colspan="2" scope="col"></th>
					<th scope="col"></th>
				</tr>
			</thead>
			<tbody>
				<% @users.each do |user| %>
				<tr>
					<td><%= attachment_image_tag user, :profile_image, :fill, 20, 20, class:"pull-left", fallback: "no_image.jpg" %></td>
					<td><%= user.name %></td>
					<td></td>
					<td><%= link_to "Show", user_path(user.id) %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
</div>