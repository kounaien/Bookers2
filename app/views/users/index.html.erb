<%= render 'users/ulist' %>
<div class="col-xs-9">
	<h2>Users</h2>
		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">image</th>
					<th scope="col">name</th>
					<th colspan="2" scope="col"></th>
					<th scope="col"></th>
				</tr>
			</thead>
			<tbody>
				<% @users.each do |user| %>
				<tr>
					<td><%= attachment_image_tag user, :profile_image, :fill, 20, 20, class:"pull-left", fallback: "no_image.jpg" %></td>
					<td><%= user.name %></td>
					<td></td>
					<td><%= link_to "Show", user_path(user) %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
</div>