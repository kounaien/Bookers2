<% if @user.errors.any? %>
	<div id="error_explanation">
		<h2><%= @user.errors.count %>errors occured</h2>
		<ul>
			<% @user.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>
<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h1>User info</h1>
			<%= form_for(@user) do |f| %>
			<h4>Name</h4>
			<%= f.text_field :name %>
			<h4>Image</h4>
			<%= f.attachment_field :profile_image %>
			<h4>Introduction</h4>
			<%= f.text_area :introduction %>
			<%= f.submit 'Update User' %>
			<% end %>
		</div>
	</div>
</div>