<% if @book.errors.any? %>
	<div id="error_explanation">
		<h2><%= @book.errors.count %>errors occured</h2>
		<ul>
			<% @book.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<div class="container">
	<div class="row">
		<div class="col-xs-3 side-bar">
			<h2>User info</h2>
			<%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, class: "pull-left", fallback: "no_image.jpg" %>
			<table class="table">
				<tr>
					<!-- なぜ名前 -->
					<th>name</th>
					<th><%= current_user.name %></th>
				</tr>
				<tr>
					<th>Introduction</th>
					<th><%= current_user.introduction %></th>
				</tr>
			</table>
			<!-- アイコンツール？ -->
			<%= link_to edit_user_path(current_user.id), class:"col-xs-12 btn btn-default btn-outline-dark" do %>
			<span class="glyphicon glyphicon-wrench"></span>
			<% end %>

			<h1>New book</h1>

			<%= form_for(@book) do |f| %>

			<h4>Title</h4>
			<%= f.text_field :title %>

			<h4>Option</h4>
			<%= f.text_area :body %>

			<!-- btn-base-1分からん -->
			<%= f.submit "Create Book", class:"btn btn-primary btn-block mt-20" %>
			<% end %>
		</div>