<% if @book.errors.any? %>
	<div id="error_explanation">
		<h2><%= @book.errors.count %>errors occured</h2>
		<ul>
			<% @book.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>
<%= render 'users/ulist', { book: @book, user: @user } %>

<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table table-hover">
				<thead>
					<tr>
						<th scope="col"></th>
						<th scope="col">Title</th>
						<th scope="col">Opinion</th>
						<th colspan="4" scope="col"></th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td><%= link_to user_path(book.user_id) do %>
							<span><%= attachment_image_tag current_user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %></span>
							<% end %><td>
						<td><span><%= link_to book.title, book_path(book.id) %></span></td>
						<td><span><%= book.body %></span></td>
						<td><span><%= "" %></span></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>

