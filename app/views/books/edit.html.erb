<% if @book.errors.any? %>
	<div id="error_explanation">
		<h2><%= @book.errors.count %>errors occured</h2>
		<ul>
			<% @book.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<div class="container">
	<div class="row">
		<div class="col-xs-offset-3 col-xs-4">
			<h1>Editing Book</h1>
			<%= form_for(@book) do |f| %>
			<h4>Title</h4>
			<%= f.text_field :title %>
			<h4>Opinion</h4>
			<%= f.text_area :body %>
			<%= f.submit 'Update Book', class:"btn btn-primary btn-block" %>
			<% end %>
<p><%= link_to "Show", book_path %> | <a href="/books">Back</p>
		</div>
	</div>
</div>
